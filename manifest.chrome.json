{
  "manifest_version": 3,
  "name": "FavBox",
  "description": "Clear and modern bookmarking tool.",
  "version": "2.0",
  "permissions": [
    "bookmarks",
    "activeTab",
    "tabs",
    "storage",
    "alarms",
    "contextMenus",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "ext/popup/index.html"
  },
  "background": {
    "service_worker": "ext/sw/index.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "ext/content/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "ext/browser/index.html",
        "ext/offscreen/index.html",
        "ext/offscreen/index.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'"
  }
}